---
import "../styles/global.css";

interface NavLink {
  href: string;
  label: string;
  external?: boolean;
}

const navLinks: NavLink[] = [
  { href: "/", label: "Home" },
  { href: "/resume", label: "Resume" },
  { href: "/projects", label: "Projects" },
  {
    href: "/anclote",
    label: "Anclote",
    external: false,
  },
];
---

<nav
  class="nav"
  aria-label="Main Navigation"
  transition:name="nav"
  transition:persist
  transition:animate="none"
>
  <div class="nav-content">
    <div class="nav-brand">
      <a href="/" class="nav-logo" aria-label="Home">&lt;A.J. /&gt;</a>

      <button
        class="hamburger"
        aria-label="Toggle Navigation"
        aria-expanded="false"
        aria-controls="nav-menu"
      >
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </div>

    <ul id="nav-menu" class="nav-links" aria-label="Navigation Menu">
      {
        navLinks.map((link) => {
          const { pathname } = Astro.url;
          const isActive =
            pathname === link.href ||
            (link.href !== "/" && pathname.startsWith(link.href));

          return (
            <li>
              <a
                href={link.href}
                class={`nav-link ${isActive ? "active" : ""}`}
                target={link.external ? "_blank" : undefined}
                rel={link.external ? "noopener noreferrer" : undefined}
              >
                {link.label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.querySelector(".hamburger") as HTMLButtonElement;
    const navMenu = document.getElementById("nav-menu") as HTMLUListElement;

    if (hamburger && navMenu) {
      hamburger.addEventListener("click", () => {
        const isExpanded = hamburger.getAttribute("aria-expanded") === "true";

        hamburger.setAttribute("aria-expanded", String(!isExpanded));
        navMenu.classList.toggle("nav-links-mobile");
      });

      // Close menu when clicking outside
      document.addEventListener("click", (event) => {
        const target = event.target as Node;
        const isClickInsideNav =
          hamburger.contains(target) || navMenu.contains(target);

        if (!isClickInsideNav) {
          hamburger.setAttribute("aria-expanded", "false");
          navMenu.classList.remove("nav-links-mobile");
        }
      });
    }
  });

  // Update active state on page transitions
  document.addEventListener("astro:page-load", () => {
    const navLinks = document.querySelectorAll(".nav-link");
    const currentPath = window.location.pathname;

    navLinks.forEach((link) => {
      const href = link.getAttribute("href");
      if (href) {
        // Remove active class from all
        link.classList.remove("active");

        // Add active class if matches
        // Match exact path or subpath (except for home '/')
        const isActive =
          currentPath === href ||
          (href !== "/" && currentPath.startsWith(href));

        if (isActive) {
          link.classList.add("active");
        }
      }
    });
  });
</script>

<style>
  .nav {
    position: fixed !important;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: var(--overlay-primary);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-primary);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-logo {
    color: var(--accent-primary);
    font-family: "Permanent Marker", cursive;
    font-size: 1.5em;
    text-decoration: none;
    font-weight: 400;
    text-shadow: 1px 1px rgba(0, 0, 0, 0.3);
    transition: color var(--transition-speed) ease;
    position: relative;
    display: inline-block;
  }

  .nav-logo::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--accent-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--transition-speed) var(--transition-cubic);
  }

  .nav-logo:hover {
    color: var(--text-primary);
  }

  .nav-logo:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 1.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10;
  }

  .hamburger-line {
    width: 2rem;
    height: 0.25rem;
    background: var(--accent-tertiary);
    border-radius: 10px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    transition: color var(--transition-speed) var(--transition-cubic);
    position: relative;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--accent-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--transition-speed) var(--transition-cubic);
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .nav-link.active {
    color: var(--accent-primary);
    font-weight: 500;
  }

  .nav-link.active::after {
    transform: scaleX(1);
    height: 3px; /* Slightly thicker than the 2px hover underline */
    background-color: var(--accent-primary);
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: column;
      padding: 1rem;
    }

    .hamburger {
      display: flex;
    }

    .nav-links {
      display: none;
      flex-direction: column;
      width: 100%;
      position: absolute;
      top: 4rem;
      left: 0;
      background: var(--overlay-primary);
      backdrop-filter: blur(10px);
      padding: 1rem;
      gap: 1rem;
      text-align: center;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .nav-links-mobile {
      display: flex;
    }

    .nav-link {
      width: 100%;
      padding: 0.5rem;
    }

    .nav-link::after {
      bottom: -2px;
    }

    /* Hamburger menu animation */
    .hamburger[aria-expanded="true"] .hamburger-line:first-child {
      transform: rotate(45deg);
    }

    .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) {
      opacity: 0;
    }

    .hamburger[aria-expanded="true"] .hamburger-line:last-child {
      transform: rotate(-45deg);
    }
  }
</style>
