---
import '../styles/global.css'
---
<nav class="nav">
  <div class="nav-content">
    <div class="nav-brand">
      <a href="/" class="nav-logo">&lt;/&gt;</a>
    </div>
    <ul class="nav-links">
      <li><a href="/" class="nav-link">Home</a></li>
      <li><a href="/projects" class="nav-link">Projects</a></li>
      <li><a href="https://github.com/Arctruzeh" class="nav-link" target="_blank" rel="noopener noreferrer">GitHub</a></li>
    </ul>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(32, 32, 36, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(144, 144, 144, 0.25);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-brand {
    display: flex;
    align-items: center;
  }

  .nav-logo {
    color: #70c7be;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
    transition: color 0.2s ease-in-out;
  }

  .nav-logo:hover {
    color: #fff;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .nav-link {
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    transition: color 0.2s ease-in-out;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #70c7be;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .nav-link:hover {
    color: #fff;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  @media (max-width: 768px) {
    .nav-content {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
      text-align: center;
    }

    .nav-links {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-link::after {
      bottom: -2px;
    }
  }
</style>