---
const isHomePage = Astro.url.pathname === "/";
const currentYear = new Date().getFullYear();
---

<footer class={`footer ${isHomePage ? "home-footer" : ""}`}>
    <div class="footer-content">
        <div class="job-info">
            <div class="info-chip">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="chip-icon"
                >
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2"
                    ></rect>
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
                <span class="chip-text">
                    Currently working at <a
                        href="https://radyantinc.com/"
                        target="_blank"
                        rel="noopener noreferrer">Radyant Inc</a
                    >
                    <span class="sub-text">(DLA / DoD)</span>
                </span>
            </div>

            <div class="info-chip">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="chip-icon"
                >
                    <polyline points="16 18 22 12 16 6"></polyline>
                    <polyline points="8 6 2 12 8 18"></polyline>
                </svg>
                <span class="chip-text">
                    Web Dev, Design & SEO at <a
                        href="https://sparkyourservice.com/"
                        target="_blank"
                        rel="noopener noreferrer">Service Spark</a
                    >
                </span>
            </div>
        </div>

        <div class="resume">
            <a href="/resume" class="btn btn-primary">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="22"
                    height="22"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.75"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                View Resume
            </a>
        </div>

        <div class="social-links">
            <a
                href="https://github.com/arctruzeh"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="GitHub"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-github"
                >
                    <path
                        d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                    ></path>
                </svg>
            </a>
            <a href="mailto:ajlato01@gmail.com" aria-label="Email">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-mail"
                >
                    <path
                        d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                    ></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
            </a>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 1.5rem 0;
        background: var(--overlay-primary);
        border-top: 1px solid var(--border-primary);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        z-index: 999;
    }

    .home-footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: 1.5fr 1fr 1.5fr;
        align-items: center;
        gap: 2rem;
    }

    .job-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .info-chip {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-size: 0.85rem;
        color: var(--text-secondary);
        background: rgba(255, 255, 255, 0.03);
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        border: 1px solid var(--border-primary);
        transition: all var(--transition-speed) var(--transition-cubic);
        width: fit-content;
    }

    .info-chip:hover {
        background: rgba(255, 255, 255, 0.07);
        border-color: var(--accent-primary);
    }

    .chip-icon {
        color: var(--accent-primary);
        flex-shrink: 0;
    }

    .chip-text {
        white-space: nowrap;
    }

    .chip-text a {
        color: var(--text-primary);
        font-weight: 500;
        text-decoration: none;
        transition: color var(--transition-speed) ease;
    }

    .chip-text a:hover {
        color: var(--accent-primary);
    }

    .sub-text {
        font-size: 0.75rem;
        opacity: 0.7;
        margin-left: 0.25rem;
        color: var(--text-tertiary);
    }

    .resume {
        text-align: center;
    }

    .social-links {
        display: flex;
        justify-content: flex-end;
        gap: 1.5rem;
    }

    .social-links a {
        color: var(--text-secondary);
        transition: color var(--transition-speed) var(--transition-cubic);
        position: relative;
        display: inline-flex;
        align-items: center;
    }

    .social-links a::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -4px;
        left: 0;
        background-color: var(--accent-primary);
        transform: scaleX(0);
        transform-origin: right;
        transition: transform var(--transition-speed) var(--transition-cubic);
    }

    .social-links a:hover {
        color: var(--text-primary);
    }

    .social-links a:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    @media (max-width: 1024px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
            padding: 2rem;
            text-align: center;
        }

        .job-info {
            align-items: center;
        }

        .info-chip {
            width: fit-content;
        }

        .info-chip:hover {
            border-color: var(--accent-primary);
        }

        .resume {
            order: -1;
        }

        .social-links {
            justify-content: center;
        }
    }
</style>
