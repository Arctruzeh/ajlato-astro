---
const isHomePage = Astro.url.pathname === "/";
---
<footer class={`footer ${isHomePage ? 'home-footer' : ''}`}>
    <div class="footer-content">
        <div class="job-info">
            Currently working for <a href="https://www.usgs.gov/" target="_blank" rel="noopener noreferrer">USGS</a>
        </div>
        
        <div class="resume">
            <a href="/AJ_Latocha_Resume.pdf" target="_blank" rel="noopener noreferrer">
                Download Resume
            </a>
        </div>

        <div class="social-links">
            <a href="https://github.com/arctruzeh" target="_blank" rel="noopener noreferrer" class="social-link">
                <i class="fa-brands fa-github"></i>
                <span class="sr-only">GitHub</span>
            </a>
            <a href="mailto:ajlato01@gmail.com" class="social-link">
                <i class="fa-regular fa-envelope"></i>
                <span class="sr-only">Email</span>
            </a>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 1rem 0;
        background: var(--overlay-primary);
        border-top: 1px solid var(--border-primary);
        z-index: 999;
    }

    .home-footer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 999;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .job-info {
        font-size: 1.1rem;
        color: var(--text-secondary);
    }

    .job-info a {
        color: var(--accent-primary);
        text-decoration: none;
        transition: color var(--transition-speed) ease;
    }

    .job-info a:hover {
        color: var(--accent-secondary);
    }

    .resume a {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: var(--accent-tertiary);
        color: var(--text-primary);
        text-decoration: none;
        border-radius: 4px;
        transition: 
            background-color var(--transition-speed) ease,
            transform var(--transition-speed) ease;
    }

    .resume a:hover {
        background-color: var(--accent-quaternary);
        transform: scale(1.05);
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 0.5rem;
    }

    .social-link {
        color: var(--text-secondary);
        font-size: 1.5rem;
        transition: 
            color var(--transition-speed) ease,
            transform var(--transition-speed) ease;
    }

    .social-link:hover {
        color: var(--accent-secondary);
        transform: scale(1.2);
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
    }

    @media (min-width: 768px) {
        .footer-content {
            flex-direction: row;
            justify-content: space-between;
            text-align: left;
        }

        .social-links {
            margin-top: 0;
        }
    }
</style>