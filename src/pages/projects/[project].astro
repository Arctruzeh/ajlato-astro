---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
    const projects = await getCollection("projects");
    return projects.map((entry) => ({
        params: { project: entry.id.replace(/\.mdx$/, "") },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const projectData = entry.data;
---

<Layout>
    <div class="project-container">
        <a href="/projects" class="back-button">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <line x1="19" y1="12" x2="5" y2="12"></line>
                <polyline points="12 19 5 12 12 5"></polyline>
            </svg>
            Back to Projects
        </a>

        <header class="project-header">
            <h1>{projectData.name}</h1>
            <p class="intro-description">{projectData.description}</p>
        </header>

        <div class="project-grid">
            <aside class="project-sidebar">
                <div class="media-card card">
                    <Image
                        src={projectData.image}
                        alt={projectData.name}
                        width={800}
                        height={450}
                        class="main-image"
                    />
                </div>

                <div class="actions-card card">
                    <div class="action-buttons">
                        {
                            projectData.liveDemo && (
                                <a
                                    href={projectData.liveDemo}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="btn btn-primary btn-large"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="24"
                                        height="24"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        class="icon"
                                    >
                                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                        <polyline points="15 3 21 3 21 9" />
                                        <line x1="10" y1="14" x2="21" y2="3" />
                                    </svg>
                                    Live Demo
                                </a>
                            )
                        }
                        <a
                            href={projectData.github}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-secondary btn-large"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="icon"
                            >
                                <path
                                    d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
                                ></path>
                            </svg>
                            GitHub Repo
                        </a>
                    </div>
                </div>

                <div class="meta-card card">
                    <div class="meta-item">
                        <h3>Created</h3>
                        <p>{projectData.dateCreated}</p>
                    </div>
                    <div class="meta-item">
                        <h3>Technologies</h3>
                        <ul class="tags">
                            {
                                projectData.technologies.map((tech) => (
                                    <li class="tag">{tech}</li>
                                ))
                            }
                        </ul>
                    </div>
                </div>
            </aside>

            <main class="project-main">
                <section class="card content-card">
                    <h2>About this Project</h2>
                    <p>{projectData.detailedDescription}</p>
                </section>

                <section class="card content-card">
                    <h2>Features</h2>
                    <ul class="features-list">
                        {
                            projectData.features.map((feature) => (
                                <li>{feature}</li>
                            ))
                        }
                    </ul>
                </section>

                <section class="card content-card">
                    <h2>Challenges & Solutions</h2>
                    <div class="challenges-solutions">
                        <div class="challenge-item">
                            <h3>The Challenge</h3>
                            <p>{projectData.challenges}</p>
                        </div>
                        <div class="solution-item">
                            <h3>The Solution</h3>
                            <p>{projectData.solutions}</p>
                        </div>
                    </div>
                </section>

                {
                    projectData.questions && (
                        <section class="card content-card">
                            <h2>Key Questions Answered</h2>
                            <div class="questions-grid">
                                {projectData.questions.map((item) => (
                                    <div class="question-item">
                                        <div class="question-header">
                                            <span class="q-icon">Q</span>
                                            <h3>{item.q}</h3>
                                        </div>
                                        <p>{item.a}</p>
                                    </div>
                                ))}
                            </div>
                        </section>
                    )
                }

                {
                    projectData.architecture && (
                        <section class="card content-card">
                            <h2>Architecture & Stack</h2>
                            <p>{projectData.architecture}</p>
                        </section>
                    )
                }

                {
                    projectData.interactionGroups && (
                        <section class="card content-card">
                            <h2>How Users Interact With It</h2>
                            <div class="interactions-container">
                                {projectData.interactionGroups.map((group) => (
                                    <div class="interaction-group">
                                        <h3>{group.title}</h3>
                                        <ul class="steps-list">
                                            {group.steps.map((step) => (
                                                <li>{step}</li>
                                            ))}
                                        </ul>
                                    </div>
                                ))}
                            </div>
                        </section>
                    )
                }
            </main>
        </div>
    </div>
</Layout>

<style>
    .project-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    /* Common Card Styles */
    .card {
        background-color: var(--bg-secondary);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

    /* Header */
    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 1rem;
        font-weight: 500;
        transition: color var(--transition-speed) ease;
    }

    .back-button:hover {
        color: var(--accent-tertiary);
    }

    .project-header {
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
        line-height: 1.2;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    .intro-description {
        font-size: 1.4rem;
        color: var(--text-primary);
        max-width: 800px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    }

    /* Grid Layout */
    .project-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    @media (min-width: 900px) {
        .project-grid {
            grid-template-columns: 350px 1fr;
            align-items: start;
        }

        .project-sidebar {
            position: sticky;
            top: 2rem;
        }
    }

    /* Sidebar / Media */
    .media-card {
        padding: 0.5rem; /* Less padding for image */
        overflow: hidden;
    }

    .main-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        display: block;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-large {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
    }

    .meta-item:not(:last-child) {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .meta-item h3 {
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--text-secondary);
        margin-bottom: 0.8rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
    }

    .tag {
        background-color: var(--accent-primary);
        color: var(--bg-primary);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    /* Main Content */
    .content-card h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: var(--accent-tertiary);
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 0.5rem;
    }

    .content-card p,
    .content-card li {
        color: var(--text-primary);
        line-height: 1.7;
        font-size: 1.1rem;
    }

    .features-list {
        padding-left: 1.5rem;
    }

    .features-list li {
        margin-bottom: 0.8rem;
    }

    /* Challenges & Solutions */
    .challenges-solutions {
        display: grid;
        gap: 2rem;
    }

    .challenge-item,
    .solution-item {
        background: var(--bg-primary);
        padding: 1.5rem;
        border-radius: 8px;
    }

    .challenge-item h3,
    .solution-item h3 {
        color: var(--accent-quaternary);
        margin-bottom: 0.5rem;
        font-size: 1.3rem;
    }

    /* Questions */
    .questions-grid {
        display: grid;
        gap: 1.5rem;
    }

    .question-item {
        background: var(--bg-primary);
        padding: 1.5rem;
        border-radius: 8px;
    }

    .question-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        margin-bottom: 0.5rem;
    }

    .q-icon {
        background: var(--accent-primary);
        color: var(--bg-primary);
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: bold;
        flex-shrink: 0;
    }

    .question-header h3 {
        font-size: 1.1rem;
        color: var(--accent-tertiary);
        margin: 0;
        line-height: 1.4;
    }

    /* Interactions */
    .interactions-container {
        display: grid;
        gap: 1.5rem;
    }

    @media (min-width: 768px) {
        .challenges-solutions {
            grid-template-columns: 1fr 1fr;
        }
        .interactions-container {
            grid-template-columns: 1fr 1fr;
        }
    }

    .interaction-group {
        background: var(--bg-primary);
        padding: 1.5rem;
        border-radius: 8px;
    }

    .interaction-group h3 {
        color: var(--accent-quaternary);
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .steps-list {
        list-style: none;
        padding: 0;
    }

    .steps-list li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.8rem;
    }

    .steps-list li::before {
        content: "â€¢";
        color: var(--accent-tertiary);
        position: absolute;
        left: 0;
        font-weight: bold;
    }
</style>
