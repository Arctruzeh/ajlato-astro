---
import Layout from '../../layouts/Layout.astro';
import Modal from '../../components/Modal.astro';
import { Image } from 'astro:assets';
import { projects } from '../../data/projects';

const projectsList = Object.entries(projects).map(([slug, data]) => ({
    ...data,
    slug
}));
---

<Layout>
    <h1>Projects</h1>
    <Modal />
    <div class="projects">
        {
            projectsList.map((project, index) => (
                <div class="project">
                    <div class="project-content">
                        <h2>{project.name}</h2>
                        <p>{project.description}</p>
                    </div>
                    <div class="project-media">
                        <Image 
                            src={project.image} 
                            alt={project.name}
                            width={600}
                            height={338}
                            loading={index === 0 ? "eager" : "lazy"}
                        />
                        <div class="project-links">
                            <a href={`/projects/${project.slug}`} class="view-project">View Project</a>
                            <a href={project.github} class="github-link" target="_blank" rel="noopener noreferrer">
                                View on GitHub
                            </a>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</Layout>

<style>
    .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 2rem;
    }

    .project {
        background: rgba(144, 144, 144, 0.075);
        padding: 1.5rem;
        border-radius: 4px;
        transition: transform 0.3s ease;
        border: solid 1px rgba(144, 144, 144, 0.25);
        display: flex;
        flex-direction: column;
    }

    .project:hover {
        transform: translateY(-5px);
    }

    .project-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .project-media {
        margin-top: auto;
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin: 2rem 0;
        color: #fff;
        font-weight: 400;
    }

    h2 {
        font-size: 1.75em;
        margin-bottom: 1rem;
        color: #fff;
        font-weight: 400;
    }

    p {
        margin-bottom: 1.5rem;
        color: rgba(255, 255, 255, 0.75);
        line-height: 1.65;
    }

    img {
        width: 100%;
        height: auto;
        border-radius: 4px;
        margin-bottom: 1rem;
    }

    .project-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .view-project, .github-link {
        flex: 1;
        text-align: center;
        padding: 0.75rem 1.5rem;
        color: #ffffff !important;
        text-decoration: none;
        border-radius: 4px;
        background-color: #70c7be;
        transition: background-color 0.2s ease;
    }

    .github-link {
        background-color: rgba(144, 144, 144, 0.25);
    }

    .view-project:hover {
        background-color: #8cd1ca;
    }

    .github-link:hover {
        background-color: rgba(144, 144, 144, 0.4);
    }

    @media (max-width: 768px) {
        .projects {
            grid-template-columns: 1fr;
            padding: 1rem;
        }

        .project-links {
            flex-direction: column;
        }
    }
</style>
