---
import Layout from "../../layouts/Layout.astro";
import Modal from "../../components/Modal.astro";
import { Image } from "astro:assets";
import { projects } from "../../data/projects";

const projectsList = Object.entries(projects).map(([slug, data]) => ({
    ...data,
    slug,
}));
---

<Layout>
    <h1>Projects</h1>
    <Modal />
    <div class="projects">
        {
            projectsList.map((project, index) => (
                <div class="project">
                    <div class="project-media">
                        <Image
                            src={project.image}
                            alt={project.name}
                            width={600}
                            height={338}
                            loading={index === 0 ? "eager" : "lazy"}
                        />
                    </div>
                    <div class="project-content">
                        <h2>{project.name}</h2>
                        <p>{project.description}</p>
                        <div class="project-links">
                            <a
                                href={`/projects/${project.slug}`}
                                class="btn btn-primary"
                            >
                                View Project
                            </a>
                            <a
                                href={project.github}
                                class="btn btn-secondary"
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                View on GitHub
                            </a>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</Layout>

<style>
    h1 {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
        color: var(--text-primary);
        font-size: 2.5rem;
        text-align: left;
    }

    .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
    }

    .project {
        display: flex;
        flex-direction: column;
        background-color: var(--bg-secondary);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform var(--transition-speed) ease;
    }

    .project:hover {
        /* Remove scale for better stability and accessibility */
    }

    .project-media {
        width: 100%;
        position: relative;
    }

    .project-media img {
        width: 100%;
        height: auto;
        display: block;
        object-fit: cover;
    }

    .project-content {
        padding: 1.5rem;
        background-color: var(--overlay-secondary);
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .project-content h2 {
        color: var(--accent-quaternary);
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }

    .project-content p {
        color: var(--text-secondary);
        margin-bottom: 1rem;
        line-height: 1.6;
        min-height: 6rem;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .project-links {
        margin-top: auto;
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        padding: 0.5rem 0;
    }

    .btn {
        flex: 1;
        min-width: 140px;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
            padding: 0 1rem;
        }

        .projects {
            grid-template-columns: 1fr;
            padding: 0 1rem;
            gap: 1.5rem;
        }

        .project-content {
            padding: 1rem;
        }

        .project-content h2 {
            font-size: 1.3rem;
        }

        .project-links {
            padding: 0.25rem 0;
        }

        .view-project,
        .github-link {
            padding: 0.625rem 1rem;
            min-width: 120px;
            font-size: 0.9rem;
        }
    }
</style>
