---
import Layout from '../../layouts/Layout.astro';
import Modal from '../../components/Modal.astro';
import { Image } from 'astro:assets';
import { projects } from '../../data/projects';

const projectsList = Object.entries(projects).map(([slug, data]) => ({
    ...data,
    slug
}));
---

<Layout>
    <h1>Projects</h1>
    <Modal />
    <div class="projects">
        {
            projectsList.map((project, index) => (
                <div class="project">
                    <div class="project-content">
                        <h2>{project.name}</h2>
                        <p>{project.description}</p>
                    </div>
                    <div class="project-media">
                        <Image 
                            src={project.image} 
                            alt={project.name}
                            width={600}
                            height={338}
                            loading={index === 0 ? "eager" : "lazy"}
                        />
                        <div class="project-links">
                            <a href={`/projects/${project.slug}`} class="view-project">View Project</a>
                            <a href={project.github} class="github-link" target="_blank" rel="noopener noreferrer">
                                View on GitHub
                            </a>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</Layout>

<style>
    h1 {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
        color: var(--text-primary);
        font-size: 2.5rem;
        text-align: left;
    }

    .projects {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 2rem;
    }

    .project {
        display: flex;
        flex-direction: column;
        background-color: var(--bg-secondary);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform var(--transition-speed) ease;
    }

    .project:hover {
        transform: scale(1.02);
    }

    .project-content {
        padding: 1.5rem;
        background-color: var(--overlay-secondary);
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .project-content h2 {
        color: var(--accent-quaternary);
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }

    .project-content p {
        color: var(--text-secondary);
        margin-bottom: 0;
        line-height: 1.6;
        min-height: 6rem;  /* Ensures consistent height */
        display: -webkit-box;
        -webkit-line-clamp: 4;  /* Limits to 4 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .project-media {
        position: relative;
    }

    .project-media img {
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: opacity var(--transition-speed) ease;
    }

    .project-links {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        justify-content: space-between;
        padding: 1rem;
        background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.7) 100%);
    }

    .project-links a {
        color: var(--text-primary);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition: 
            background-color var(--transition-speed) ease,
            color var(--transition-speed) ease;
    }

    .view-project {
        background-color: var(--accent-primary);
    }

    .github-link {
        background-color: var(--accent-secondary);
    }

    .project-links a:hover {
        background-color: var(--overlay-secondary);
        color: var(--text-primary);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
            padding: 0 1rem;
        }

        .projects {
            grid-template-columns: 1fr;
            padding: 0 1rem;
            gap: 1.5rem;
        }

        .project-content {
            padding: 1rem;
        }

        .project-content h2 {
            font-size: 1.3rem;
        }

        .project-links {
            padding: 0.75rem;
        }
    }
</style>
