---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout>
	<div class="home-container">
		<Hero />
	</div>
</Layout>

<style>
	.home-container {
		height: calc(100vh - 72px);
		overflow: hidden;
		position: relative;
	}

	@media (max-width: 768px) {
		.home-container {
			height: 100vh;
		}
	}
</style>
