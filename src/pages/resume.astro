import Layout from "../layouts/Layout.astro";
---

<Layout title="Resume | A.J. Latocha">
    <div class="resume-container">
        <header class="resume-header">
            <div class="header-content">
                <h1>A.J. Latocha</h1>
                <p class="tagline">Software Engineer & Digital Specialist</p>
                <div class="contact-info">
                    <span>Tampa, FL</span> •
                    <a href="mailto:ajlato01@gmail.com">ajlato01@gmail.com</a> •
                    <a href="https://github.com/arctruzeh" target="_blank"
                        >GitHub</a
                    > •
                    <a href="/" target="_blank">ajlato.com</a>
                </div>
            </div>
            <button class="btn btn-primary print-btn" onclick="window.print()">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><polyline points="6 9 6 2 18 2 18 9"></polyline><path
                        d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"
                    ></path><rect x="6" y="14" width="12" height="8"
                    ></rect></svg
                >
                Export PDF
            </button>
        </header>

        <main class="resume-main">
            <section class="resume-section">
                <h2>Professional Summary</h2>
                <p>
                    Versatile Software Engineer with over a decade of experience
                    building robust, scalable applications. Currently focused on
                    developing mission-critical internal tools for the
                    Department of Defense. Experienced in modern web
                    technologies, digital marketing, and building user-centric
                    interfaces that bridge the gap between complex data and
                    actionable insights across federal, enterprise, and start-up
                    environments.
                </p>
            </section>

            <section class="resume-section">
                <h2>Experience</h2>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Software Engineer (Contractor)</h3>
                        <span class="date">Aug 2025 — Present</span>
                    </div>
                    <div class="company-row">
                        <span class="company">Radyant Inc</span>
                        <span class="contract-info"
                            >Contracted to Accenture Federal Services (AFS)</span
                        >
                    </div>
                    <p class="role-desc">
                        Supporting the <strong
                            >Defense Logistics Agency (DLA)</strong
                        > / <strong>Department of Defense</strong>
                    </p>
                    <ul class="bullets">
                        <li>
                            Collaborate on a high-impact team of 10 developers
                            and infrastructure personnel to enhance and maintain
                            a custom <strong>MEAN stack</strong> (MongoDB, Express,
                            Angular, Node.js) web application.
                        </li>
                        <li>
                            Manage mission-critical logic for two military
                            supply chains, overseeing <strong
                                >900k+ line items</strong
                            > and accounting for <strong
                                >$5.3B in annual spend</strong
                            >.
                        </li>
                        <li>
                            Implement modern front-end architectures to ensure
                            high security and performance standards for DLA
                            stakeholders.
                        </li>
                    </ul>
                </div>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Software Engineer / Web Developer</h3>
                        <span class="date">Apr 2021 — Oct 2025</span>
                    </div>
                    <div class="company">U.S. Geological Survey (USGS)</div>
                    <ul class="bullets">
                        <li>
                            Work with staff and teams to design and develop
                            numerous internal, national projects using modern
                            web technologies and cloud infrastructure.
                        </li>
                        <li>
                            Automating the approval process, creating event and
                            travel requests, progress reporting,
                            spending/funding tracking, safety equipment renewal,
                            and more.
                        </li>
                        <li>
                            Utilized React, Node.js, Astro, and AWS (Lambda,
                            DynamoDB, S3, SES), with additional work in Python,
                            Streamlit, Power Apps, and Drupal.
                        </li>
                    </ul>
                </div>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Web Developer</h3>
                        <span class="date">2020 — 2020</span>
                    </div>
                    <div class="company">Masonite</div>
                    <ul class="bullets">
                        <li>
                            Worked with a team of developers that manage a
                            number of internal and external products for several
                            aspects of the business using an agile workflow.
                        </li>
                        <li>
                            Unit testing and documentation when applicable. PHP,
                            Javascript, HTML, CSS, Sql, Wordpress, React,
                            Laravel, Postman, TablePlus, Git, Docker, NPM,
                            Composer, Jira, BitBucket, Zeplin, AWS.
                        </li>
                    </ul>
                </div>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Web Developer</h3>
                        <span class="date">2019 — 2020</span>
                    </div>
                    <div class="company">Midnet Media</div>
                    <ul class="bullets">
                        <li>
                            Developed custom Drupal modules using php and built
                            full Drupal sites.
                        </li>
                        <li>
                            Python scripts for automating repetitive tasks and
                            custom Duda widgets.
                        </li>
                        <li>
                            Support system using Teamwork Desk. Talk to and
                            resolve customer issues. Custom Angular widgets for
                            Freeboard IoT.
                        </li>
                    </ul>
                </div>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Graphic Designer</h3>
                        <span class="date">2017 — 2018</span>
                    </div>
                    <div class="company">Wentworth CC</div>
                    <ul class="bullets">
                        <li>
                            Designed and created graphics for the company
                            website, email campaigns, social media, flyers, in
                            store signs.
                        </li>
                        <li>
                            Maintained and updated Wordpress site using
                            Javascript, Wordpress, HTML, CSS, Photoshop.
                        </li>
                    </ul>
                </div>

                <div class="experience-item">
                    <div class="exp-header">
                        <h3>Web Developer</h3>
                        <span class="date">2011 — 2016</span>
                    </div>
                    <div class="company">CreationSWD</div>
                    <ul class="bullets">
                        <li>
                            Created, updated, hosted, and maintained multiple
                            websites. Setup cloud platform.
                        </li>
                        <li>
                            Met with prospective clients to talk about their
                            needs using Javascript, PHP, MySql, Wordpress, HTML,
                            CSS, Photoshop, AWS.
                        </li>
                    </ul>
                </div>
            </section>
        </main>

        <section class="resume-section grid-2">
            <div>
                <h2>Skills</h2>
                <div class="skills-grid">
                    <div class="skill-group">
                        <strong>Programming Languages:</strong> Javascript (ES6+),
                        PHP, SQL, GraphQL, HTML, CSS, LUA, Python
                    </div>
                    <div class="skill-group">
                        <strong>Libraries & Frameworks:</strong> React, Astro, Node.js,
                        Angular, Laravel, jQuery, UI Kit, Bootstrap, MDL
                    </div>
                    <div class="skill-group">
                        <strong>Tools & Platforms:</strong> AWS (Lambda, DynamoDB,
                        S3, SES), Git, Docker, CI/CD, Vite, Postman, TablePlus, Webpack,
                        Netlify, Wordpress, Drupal, DDev, NPM, Composer, Jira, BitBucket
                    </div>
                    <div class="skill-group">
                        <strong>Design:</strong> Figma, Zeplin, Sketch, Photoshop
                    </div>
                    <div class="skill-group">
                        <strong>Interests:</strong> Playing guitar, golf, and fishing!
                    </div>
                </div>
            </div>
            <div>
                <h2>Projects</h2>
                <div class="project-item">
                    <strong>MoolaMeter</strong>
                    <p>
                        Comprehensive personal finance projection and budget
                        forecasting tool. Featured interactive charts and
                        long-term financial roadmaps.
                    </p>
                </div>
                <div class="project-item">
                    <strong>Live Auction Web Scraper</strong>
                    <p>
                        Desktop app built with Python. Scraped winning bids from
                        live auctions and stored them in a database to create a
                        public record of past auction sale prices.
                    </p>
                </div>
                <div class="project-item">
                    <strong>WoW Arena Bots</strong>
                    <p>
                        Advanced arena robots for WotlK written in LUA. Logic
                        for spell casting, movement, line of sight, and
                        inter-bot communication.
                    </p>
                </div>
                <div class="project-item">
                    <strong>Anclote</strong>
                    <p>
                        A specialized digital platform showcasing modern web
                        architecture and user experience.
                    </p>
                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    .resume-container {
        position: relative;
        max-width: 900px;
        margin: 2rem auto;
        padding: 3rem;
        background: var(--bg-secondary);
        color: var(--text-primary);
        border-radius: 12px;
        border: 1px solid var(--border-primary);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }


    /* Print Styles */
    @media print {
        :global(nav),
        :global(footer),
        .print-btn {
            display: none !important;
        }

        body {
            background: white !important;
            color: black !important;
        }

        .resume-container {
            margin: 0;
            padding: 0;
            box-shadow: none;
            border: none;
            background: white !important;
            color: black !important;
            max-width: 100%;
        }

        .resume-section h2 {
            border-bottom: 2px solid #ccc !important;
            color: black !important;
        }

        a {
            color: black !important;
            text-decoration: none;
        }

        .role-desc,
        .company,
        h3,
        .date {
            color: black !important;
        }

        .resume-header h1 {
            color: black !important;
        }

        .tagline {
            color: #444 !important;
        }

        .contact-info {
            color: #666 !important;
        }
    }

    .resume-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        border-bottom: 2px solid var(--accent-primary);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

    .resume-header h1 {
        font-size: 3rem;
        font-family: "Permanent Marker", cursive;
        color: var(--accent-primary);
        margin: 0;
        line-height: 1;
    }

    .tagline {
        font-size: 1.2rem;
        color: var(--text-secondary);
        margin: 0.5rem 0;
        font-weight: 400;
    }

    .contact-info {
        font-size: 0.9rem;
        color: var(--text-tertiary);
    }

    .print-btn {
        padding: 0.75rem 1.25rem;
        font-size: 0.9rem;
    }

    .print-btn svg {
        transition: transform var(--transition-speed) var(--transition-cubic);
    }

    .print-btn:hover svg {
        transform: rotate(-10deg);
    }

    .resume-section {
        margin-bottom: 2.5rem;
    }

    .resume-section h2 {
        font-size: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: var(--accent-primary);
        border-bottom: 1px solid var(--border-primary);
        padding-bottom: 0.5rem;
        margin-bottom: 1.25rem;
    }

    .experience-item {
        margin-bottom: 2rem;
    }

    .exp-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.25rem;
    }

    .exp-header h3 {
        font-size: 1.25rem;
        color: var(--text-primary);
        margin: 0;
    }

    .date {
        font-size: 0.9rem;
        color: var(--text-tertiary);
        font-weight: 400;
    }

    .company-row {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .company {
        font-weight: 600;
        color: var(--accent-secondary);
    }

    .contract-info {
        font-size: 0.85rem;
        color: var(--text-tertiary);
        font-style: italic;
    }

    .role-desc {
        margin: 0.5rem 0;
        color: var(--text-secondary);
    }

    .bullets {
        margin: 0.5rem 0;
        padding-left: 1.2rem;
        list-style-type: none;
    }

    .bullets li {
        position: relative;
        margin-bottom: 0.5rem;
        color: var(--text-secondary);
    }

    .bullets li::before {
        content: "•";
        color: var(--accent-primary);
        position: absolute;
        left: -1.2rem;
        font-weight: bold;
    }

    .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .skill-group {
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
        color: var(--text-secondary);
    }

    .project-item {
        margin-bottom: 1rem;
    }

    .project-item strong {
        color: var(--text-primary);
        display: block;
        margin-bottom: 0.25rem;
    }

    .project-item p {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin: 0;
    }

    @media (max-width: 768px) {
        .resume-container {
            margin: 1rem;
            padding: 1.5rem;
        }
        .grid-2 {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        .exp-header {
            flex-direction: column;
            gap: 0.25rem;
        }
        .resume-header {
            flex-direction: column;
            gap: 1.5rem;
        }
        .company-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.1rem;
        }
    }
</style>
