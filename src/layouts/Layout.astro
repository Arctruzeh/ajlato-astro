---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import GtmHead from "../components/gtm-head.astro";
import GtmBody from "../components/gtm-body.astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import icon from "../assets/images/code.png";
import { ClientRouter } from "astro:transitions";

const isHomePage = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en" transition:animate="none">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href={icon.src} />
        <meta name="generator" content={Astro.generator} />
        <title>A.J. Latocha</title>
        <ClientRouter />
        <GtmHead />
    </head>
    <body class={isHomePage ? "home-body" : ""}>
        <GtmBody />
        <div
            class="bg-container"
            transition:persist
            transition:name="bg-container"
        >
            <div class="bg"></div>
            <div class="bg bg2"></div>
            <div class="bg bg3"></div>
        </div>
        <Nav />
        <main transition:name="main-content" transition:animate="fade">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<script>
    // Use Web Animations API for persistent background animations
    // This prevents the animation resetting ("red flash") when the element is moved in the DOM during transitions
    document.addEventListener("astro:page-load", () => {
        const bgContainer = document.querySelector(".bg-container");
        if (!bgContainer) return;

        const bgElements = bgContainer.querySelectorAll(".bg");

        // Animation Configuration
        const keyframes = [
            { transform: "translateX(-25%)" },
            { transform: "translateX(25%)" },
        ];

        const commonOptions = {
            easing: "ease-in-out",
            iterations: Infinity,
        };

        // Initialize animations if not already running
        bgElements.forEach((el, index) => {
            // Check if animation is already running
            if (el.getAnimations().length > 0) return;

            let duration = 10000; // Default 10s
            let direction: PlaybackDirection = "alternate";

            if (el.classList.contains("bg2")) {
                duration = 11000;
                direction = "alternate-reverse";
            } else if (el.classList.contains("bg3")) {
                duration = 12000; // 12s
            }

            el.animate(keyframes, {
                ...commonOptions,
                duration: duration,
                direction: direction,
            });
        });
    });
</script>

<style>
    .bg-container {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        pointer-events: none;
        background-color: var(
            --bg-primary
        ); /* Moved here for persistent background during transitions */
    }

    .home-body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    main {
        padding-top: 72px;
        min-height: 0;
        flex: 1;
        position: relative;
        display: flex;
        flex-direction: column;
        transition: padding-top 0.2s ease;
    }

    @media (max-width: 768px) {
        .home-body main {
            padding-top: 0;
            /* Flex column handles height, no need for 100vh min-height here specifically if flex works */
        }
    }
</style>
